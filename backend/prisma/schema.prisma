generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Media {
  id        Int      @id @default(autoincrement())
  title     String
  type      String   // Changed from enum to String
  director  String
  budget    String
  location  String
  duration  String
  yearTime  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("media")
}

